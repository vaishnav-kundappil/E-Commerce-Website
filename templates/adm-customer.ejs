<!DOCTYPE html>
<html>
   <head>
      <title>Customer Database</title>
      <link rel="stylesheet" type="text/css" href="../public/css/bootstrap.css">
      <link href="../public/css/dataTables.bootstrap4.min.css" rel="stylesheet">
      <link rel="../stylesheet" type="text/css" href="../public/css/design.css">
  
      <script src="../public/js/jquery.min.js"></script>
      <script src="../public/js/jquery.dataTables.min.js"></script>
      <script src="../public/js/dataTables.bootstrap4.min.js"></script>
   </head>
   <%- include('common/customer-header')%>
   <%if(sucess  && sucess != ''){%>
      <div class="alert alert-success" role="alert">
        <%=sucess%>
       </div>
       <%}else if(err && err != ''){%>
         <div class="alert alert-danger" role="alert">
            <%=err%>
         <%}%>
      <div class="container mt-5">
         <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
               <tr>
                  <th>Name</th>
                  <th>Password</th>
                  <th>Email</th>
                  <th>Operation</th>
               </tr>
            </thead>

            <tbody>
               <% x.forEach((y)=>{%>


                  <tr>
                     <td><%= y.name%></td>
                     <td><%= y.password%></td>
                     <td><%= y.email%></td>
                     <td>
                        <a class="btn btn-primary" href="/edit-cust/<%= y.email%>">Edit</a>
                        
                        <form style="display: inline;" action="/delete-cust/<%= y.email%>?_method=DELETE" method="POST">
                          
                           <button style="cursor: pointer;" type="submit" class="btn btn-danger ml-2">Delete</button>
                        </form>
                     </td>
                  </tr>
                  <%})%>
                           </tbody>
   
         </table>
      </div>

      <div style="text-align: right ;margin-top: -3.3%;margin-right:1.5%">
         <a href="/adm-home">
         <button class="go-btn">Back</button>
         </a>
         </div>

      <%- include('common/footer') %>
</html>
