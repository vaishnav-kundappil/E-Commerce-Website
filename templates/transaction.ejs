<!DOCTYPE html>
<html>
   <head>
      <title>Transaction</title>
      <link rel="stylesheet" type="text/css" href="../public/css/bootstrap.css">
      <link href="../public/css/dataTables.bootstrap4.min.css" rel="stylesheet">
      <link rel="../stylesheet" type="text/css" href="../public/css/design.css">
  
      <script src="../public/js/jquery.min.js"></script>
      <script src="../public/js/jquery.dataTables.min.js"></script>
      <script src="../public/js/dataTables.bootstrap4.min.js"></script>
   </head>

   <%- include('common/transac-header') %>
      <div class="container mt-5">
         <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
               <tr>
                  <th>Product ID</th>
                  <th>Product</th>
                  <th>Category</th>
                  <th>Price</th>
                  <th>email</th>
                  <th>count</th>
                  <th>Name</th>
                  <th>Address</th>
                  <th>payment</th>

               </tr>
               
            <tbody>
               <% x.forEach((y)=>{%>


                  <tr>
                     <td><%= y.id%></td>
                     <td><%= y.prod_name%></td>
                     <td><%= y.category%></td>
                     <td><%= y.price%></td>
                     <td><%= y.email%></td>
                     <td><%= y.count%></td>
                     <td><%= y.name%></td>
                     <td><%= y.address%></td>
                     <td>
                        <a class="btn btn-primary" href="/<%= y.email%>/payment/<%= y.id%>">pay</a>
                        
                        <!-- <form style="display: inline;" action="/delete/<%= y.Name%>?_method=DELETE" method="POST">
                          
                           <button style="cursor: pointer;" type="submit" class="btn btn-danger ml-2">Delete</button>
                        </form> -->
                     </td>
                  </tr>
                  <%})%>
                           </tbody>
            </thead>


    
         </table>
      </div>

      <div style="text-align: right ;margin-top: -3.3%;margin-right:1.5%">
         <a href="/home/<%= check.email%>">     
         <button class="go-btn">Back</button>
         </a>
         </div>

      <%- include('common/footer') %>
</html>
